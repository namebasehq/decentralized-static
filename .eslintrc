{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "env": {
      "es6": true
    },
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "eqeqeq": "error",
    "no-var": "error",
    "spaced-comment": [
      "error",
      "always"
    ],
    "prettier/prettier": "error",
    "flowtype/space-after-type-colon": [
      2,
      "always",
      {
        "allowLineBreak": true
      }
    ]
  },
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended"
  ]
}
